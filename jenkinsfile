pipeline {
  agent any
  stages {
    stage('Clone') {
      steps { git 'https://github.com/Haiqa-shahid/https://github.com/Haiqa-shahid/Haiqa-shahid.git' }
    }
    stage('Build & Push') {
      steps {
        sh 'docker build -t hyka/myapp:latest .'
        sh 'docker push hyka/myapp:latest'
      }
    }
    stage('Deploy') {
      steps {
        sh 'kubectl apply -f deployment.yaml'
        sh 'kubectl apply -f service.yaml'
      }
    }
  }
}
