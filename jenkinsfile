pipeline {
  agent any
  stages {
    stage('Clone') {
      steps { git 'https://github.com/USERNAME/devops-webapp.git' }
    }
    stage('Build & Push') {
      steps {
        sh 'docker build -t username/devops-webapp .'
        sh 'docker push username/devops-webapp'
      }
    }
    stage('Deploy') {
      steps {
        sh 'kubectl apply -f deployment.yaml'
        sh 'kubectl apply -f service.yaml'
      }
    }
  }
}
